         sh 'kubectl apply -f mavenhelloworld-deploy.yml'
        }
        }
     }*/
}     
post {
        success {
            archiveArtifacts 'maven-helloworld-web/target/*.war'
        }
        failure {
            mail to:"sumanthsainooka@gmail.com", subject:"FAILURE: ${currentBuild.fullDisplayName}", body: "Build failed"
        }
    }       
}
